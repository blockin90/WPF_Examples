<Window x:Class="CRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <!--
        <TextBlock Text="Шапка приложения" DockPanel.Dock="Top" Height="30" Background="Aqua"/>
        -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Список студентов" Command="{Binding StudenListCommand}"/>
            <MenuItem Header="Результаты сессии" Command="{Binding StudentNotesCommand}"/>
        </Menu>
        <!--
        <TextBlock Text="Подвал приложения" DockPanel.Dock="Bottom" Height="30" Background="Aqua"/>
        -->
        <Frame x:Name="contentFrame" Content="{Binding FrameContent}" NavigationUIVisibility="Hidden" Margin="5" />
    </DockPanel>
   
</Window>
