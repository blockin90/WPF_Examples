<Window x:Class="WpfApp3.ImageMoving"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="ImageMoving">
    <Canvas x:Name="canvas" Background="White">
        <Image Source="Images/Penguins.jpg" MouseMove="Image_MouseMove" MouseDown="Image_MouseDown"  Width="100" Canvas.Left="63" Canvas.Top="74"/>
        <Image Source="Images/Koala.jpg" MouseMove="Image_MouseMove" MouseDown="Image_MouseDown" Width="100" Canvas.Left="376" Canvas.Top="134"/>
    </Canvas>
</Window>
